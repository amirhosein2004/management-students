@model StudentManagementAPI.DTOs.StudentDto

@{
    ViewData["Title"] = "جزئیات دانشجو";
}

<h1>جزئیات دانشجو</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">شناسه:</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        
        <dt class="col-sm-2">نام:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        
        <dt class="col-sm-2">نام خانوادگی:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        
        <dt class="col-sm-2">شماره دانشجویی:</dt>
        <dd class="col-sm-10">@Model.StudentNumber</dd>
        
        <dt class="col-sm-2">رشته تحصیلی:</dt>
        <dd class="col-sm-10">@Model.Major</dd>
        
        <dt class="col-sm-2">سال ورود:</dt>
        <dd class="col-sm-10">@Model.EnrollmentYear</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">ویرایش</a> |
    <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
</div>